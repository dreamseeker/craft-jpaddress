{% import "_includes/forms" as forms %}

<input type="hidden" name="locale" value="{{ craft.locale }}"/>

{{ forms.lightswitchField({
  label:        'Use City Field?'|t,
  id:           'useCityField',
  name:         'useCityField',
  instructions: 'Please turn on if you use City field'|t,
  value:        settings.useCityField,
  errors:       settings.getErrors('useCityField'),
  on:           (settings.useCityField is defined) ? settings.useCityField : ''
}) }}

{{ forms.lightswitchField({
    label:        'Use Map?'|t,
    id:           'useGoogleMap',
    name:         'useGoogleMap',
    instructions: 'Please turn on if you use Google Map'|t,
    value:        settings.useGoogleMap,
    errors:       settings.getErrors('useGoogleMap'),
    on:           (settings.useGoogleMap is defined) ? settings.useGoogleMap : ''
}) }}

{{ forms.textField({
    label: 'Google Maps API Key'|t,
    id: 'googleMapsApiKey',
    name: 'googleMapsApiKey',
    instructions: 'Please enter the Google Maps API key'|t,
    value: settings.googleMapsApiKey,
    errors: settings.getErrors('googleMapsApiKey')
}) }}
